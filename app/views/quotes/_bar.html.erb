<div class="row">
  <div class="col-md-10">
    <div class="progress">
      <% percent_change = 0.0 %>
      <% percent_change = Numbers.percent_change(q.price, comparison_average_price, 2) if comparison_average_price.present?  %>
      <% bar = 'info' %>
      <% bar = 'success' if percent_change > @percent_change_threshold %>
      <% bar = 'danger' if percent_change < -@percent_change_threshold %>
      <div class="progress-bar progress-bar-<%= bar %>" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: <%= (q.price.to_f/@size.to_f*100).to_s %>%;">
        <span class="pull-left" style="margin-left:4px;">
          <%= q.traded_at_with_pretty_cst_time %>
          (#<%= q.id %>)
        </span>
        <span class="pull-right" style="margin-right:4px;">
          <%= q.price.to_f %>
          <% if comparison_average_price.present? %>
            (%<%= Numbers.percent_change(q.price, comparison_average_price, 2) %>)
          <% end %>
        </span>
      </div>
      <span class="pull-right">
        <span style="position: relative; left: -5px; color: #d1d7da; font-size: 11px;">
          <%= q.traded_at_with_pretty_cst_time %>
        </span>
      </span>
    </div>
  </div>
  <div class="col-md-2 no-left-padding">
    <%= q.volume.to_s %>
    <% if previous_volume.present? %>
      (%<%= Numbers.percent_change(q.volume, previous_volume, 2) %>)
    <% end %>
  </div>
</div>
