<div class="container">
  <div class="row">
    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3 col-sm-offset-3">
      <h1>Reset Password</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3 col-sm-offset-3">
      <hr>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3 col-sm-offset-3">
			<%= form_for(@user, html: { id: "edit_user_password_form"}, url: password_reset_path(params[:id])) do |f| %>
				<%= render 'shared/error_messages', object: @user %>
				<div class="row bottom-margin-small">
					<div class="col-md-12 col-sm-12 col-xs-12">
						<div class="form-group">
							<input class="form-control input-lg" autocomplete="off" id="user_password_reset_password" name="user[password]" type="password" placeholder="Create new password (use at least 6 characters)" required minlength="6" aria-describedby="sizing-addon2" autofocus="true">
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-6 col-sm-6 col-xs-12">
						<%= f.button "Submit", data: { disable_with: "<i class='fa fa-circle-o-notch fa-spin'></i> Submitting..." }, class: "btn" %>
					</div>
				</div>
			<% end %>
    </div>
  </div>
</div>
