<div class="row">
  <div class="col-md-10">
    <div class="progress">
      <% bar = "" %>
      <% bar = "danger" if @simulation_quote_ids.include?(q.id) && @orders.find_by_quote_id(q.id).side == "sell" %>
      <% bar = "success" if @simulation_quote_ids.include?(q.id) && @orders.find_by_quote_id(q.id).side == "buy" %>
      <% bar_length = q.price.to_f/@size.to_f*100 %>
      <div class="progress-bar progress-bar-<%= bar %>" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: <%= bar_length.to_s %>%;">
        <span class="pull-left" style="margin-left:4px;">
          <%= q.traded_at_with_pretty_cst_time %>
          (#<%= q.id %>)
        </span>
        <span class="pull-right" style="margin-right:4px;">
          <%= q.price.to_f %>
        </span>
      </div>
      <span class="pull-right">
        <span style="position: relative; left: -5px; color: #d1d7da; font-size: 11px;">
          <%= q.traded_at_with_pretty_cst_time %>
        </span>
      </span>
    </div>
  </div>
  <div class="col-md-2 no-left-padding">
    <%= q.volume.to_s %>
  </div>
</div>
