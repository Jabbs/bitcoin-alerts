<div class="header">
  <div class="row">
    <div class="col-md-3 col-sm-3 col-xs-3">
      <%= link_to root_path do %>
        <%= image_tag("logo.png", size: "50x50", class: "logo", title: t('application.root.name')) %>
      <% end %>
    </div>
    <div class="col-md-9 col-sm-9 col-xs-9">
      <% if current_user.present? %>
        <div class="user-section">
          <div class="pull-right">
            <div class="dropdown">
              <a class="btn dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= current_user.username %>
              </a>
              <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                <!--
                <li><%= link_to "My Channels", channels_path, class: "dropdown-item" %></li>
                <div class="divider"></div>
                 -->
                <% if current_user.present? && current_user.admin? %>
                  <li><%= link_to "New Channel", new_channel_path, class: "dropdown-item" %></li>
                <% end %>
                <li><%= link_to "Channels", root_path, class: "dropdown-item" %></li>
                <li><%= link_to "Settings", settings_path, class: "dropdown-item" %></li>
                <div class="divider"></div>
                <li><%= link_to "Sign out", logout_path, method: :delete, class: "dropdown-item" %></li>
              </ul>
            </div>
          </div>
        </div>
      <% else %>
        <div class="signup-section">
          <div class="pull-right">
            <%= link_to "Log in", login_path, class: "onboarding-link" %>
            <%= link_to "Sign up", signup_path, class: "onboarding-link signup-btn" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
