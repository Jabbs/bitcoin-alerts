<div class="container-fluid body">
  <div class="row">
    <div class="col-lg-10 col-md-12 col-sm-12 col-xs-12 col-centered">
      <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
          <%= render "channels/search_form" %>
        </div>
      </div>
    </div>
  </div>
  <% unless @channels.any? %>
    <div class="row">
      <div class="col-md-12">
        <div class="center">
          <p>
            <% if params[:search_value] %>
              We could not find anything matching "<%= params[:search_value] %>."
            <% else %>
              No matches found.
            <% end %>
          </p>
          <p><%= link_to "Return Home", root_path %></p>
        </div>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-lg-10 col-md-12 col-sm-12 col-xs-12 col-centered">
      <div class="row">
        <% @channels.each do |channel| %>
          <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12" style="min-width:330px;">
            <%= render "channels/link_channel", channel: channel %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-10 col-md-12 col-sm-12 col-xs-12 col-centered">
      <div class="center">
        <%= will_paginate @channels, renderer: BootstrapPagination::Rails %>
      </div>
    </div>
  </div>
</div>

<%= render "layouts/footer" %>
<div id="channel-modal-container">
</div>
